{
  "dashboard": {
    "title": "Jarvis Secrets Management",
    "tags": ["jarvis", "security", "secrets"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Total Requests/s"
          },
          {
            "expr": "rate(http_requests_success{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Success/s"
          },
          {
            "expr": "rate(http_requests_error{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Errors/s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Secrets Count",
        "type": "stat",
        "targets": [
          {
            "expr": "secrets_total{job=\"jarvis-secretsd\"}",
            "legendFormat": "Total Secrets"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 3,
        "title": "Uptime",
        "type": "stat",
        "targets": [
          {
            "expr": "time() - process_start_time_seconds{job=\"jarvis-secretsd\"}",
            "legendFormat": "Uptime (seconds)"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 4,
        "title": "Request Latency (p50, p95, p99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"jarvis-secretsd\"}[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"jarvis-secretsd\"}[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"jarvis-secretsd\"}[5m]))",
            "legendFormat": "p99"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "RBAC Decisions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rbac_allowed_total{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Allowed/s"
          },
          {
            "expr": "rate(rbac_denied_total{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Denied/s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Secret Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(secrets_created_total{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Created/s"
          },
          {
            "expr": "rate(secrets_retrieved_total{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Retrieved/s"
          },
          {
            "expr": "rate(secrets_rotated_total{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Rotated/s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "Crypto Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(encryption_ops_total{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Encryptions/s"
          },
          {
            "expr": "rate(decryption_ops_total{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Decryptions/s"
          },
          {
            "expr": "rate(decryption_errors_total{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Errors/s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 8,
        "title": "Audit Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(audit_events_total{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Events/s"
          },
          {
            "expr": "rate(audit_errors_total{job=\"jarvis-secretsd\"}[5m])",
            "legendFormat": "Errors/s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      }
    ]
  }
}
