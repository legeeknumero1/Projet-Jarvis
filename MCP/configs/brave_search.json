{
  "name": "brave-search",
  "description": "Brave Search API MCP Server pour recherche web sécurisée et sans tracking",
  "version": "1.0.0",
  "transport": {
    "type": "stdio"
  },
  "command": {
    "executable": "python",
    "args": ["-m", "mcp.servers.brave_search"],
    "env": {
      "BRAVE_API_KEY": "BSAQwlfLLNI26MUS9q_yM0QlMsydHyh",
      "BRAVE_API_KEY_BACKUP": "BSAt9z9JKc6cpjUrOw_fvHh5Uw3N-uI"
    }
  },
  "capabilities": {
    "tools": [
      {
        "name": "brave_web_search",
        "description": "Recherche web avec Brave Search API - résultats sans tracking",
        "parameters": {
          "query": {
            "type": "string",
            "description": "Requête de recherche",
            "required": true
          },
          "count": {
            "type": "integer", 
            "description": "Nombre de résultats (1-20)",
            "default": 10,
            "minimum": 1,
            "maximum": 20
          },
          "search_lang": {
            "type": "string",
            "description": "Langue de recherche (fr, en, etc.)",
            "default": "fr"
          },
          "country": {
            "type": "string", 
            "description": "Code pays (FR, US, etc.)",
            "default": "FR"
          },
          "safesearch": {
            "type": "string",
            "description": "Filtre SafeSearch",
            "enum": ["off", "moderate", "strict"],
            "default": "moderate"
          },
          "freshness": {
            "type": "string",
            "description": "Fraîcheur des résultats",
            "enum": ["", "pd", "pw", "pm", "py"],
            "default": ""
          }
        }
      },
      {
        "name": "brave_news_search", 
        "description": "Recherche d'actualités avec Brave Search API",
        "parameters": {
          "query": {
            "type": "string",
            "description": "Requête de recherche news",
            "required": true
          },
          "count": {
            "type": "integer",
            "description": "Nombre d'articles (1-20)", 
            "default": 10,
            "minimum": 1,
            "maximum": 20
          },
          "country": {
            "type": "string",
            "description": "Code pays pour actualités locales",
            "default": "FR"
          },
          "search_lang": {
            "type": "string", 
            "description": "Langue des actualités",
            "default": "fr"
          },
          "spellcheck": {
            "type": "boolean",
            "description": "Correction orthographique automatique",
            "default": true
          }
        }
      },
      {
        "name": "brave_image_search",
        "description": "Recherche d'images avec Brave Search API",
        "parameters": {
          "query": {
            "type": "string", 
            "description": "Requête de recherche d'images",
            "required": true
          },
          "count": {
            "type": "integer",
            "description": "Nombre d'images (1-20)",
            "default": 10,
            "minimum": 1,
            "maximum": 20
          },
          "search_lang": {
            "type": "string",
            "description": "Langue de recherche",
            "default": "fr"
          },
          "country": {
            "type": "string",
            "description": "Code pays",
            "default": "FR"
          },
          "safesearch": {
            "type": "string",
            "description": "Filtre SafeSearch pour images",
            "enum": ["off", "moderate", "strict"],
            "default": "strict"
          }
        }
      },
      {
        "name": "brave_video_search",
        "description": "Recherche de vidéos avec Brave Search API",
        "parameters": {
          "query": {
            "type": "string",
            "description": "Requête de recherche de vidéos", 
            "required": true
          },
          "count": {
            "type": "integer",
            "description": "Nombre de vidéos (1-20)",
            "default": 10,
            "minimum": 1,
            "maximum": 20
          },
          "search_lang": {
            "type": "string",
            "description": "Langue de recherche",
            "default": "fr"
          },
          "country": {
            "type": "string",
            "description": "Code pays",
            "default": "FR"
          },
          "safesearch": {
            "type": "string", 
            "description": "Filtre SafeSearch pour vidéos",
            "enum": ["off", "moderate", "strict"],
            "default": "moderate"
          }
        }
      }
    ]
  },
  "security": {
    "api_key_rotation": true,
    "rate_limiting": {
      "requests_per_minute": 60,
      "requests_per_day": 2000
    },
    "privacy": {
      "no_tracking": true,
      "no_user_profiling": true,
      "privacy_focused": true
    }
  },
  "metadata": {
    "author": "Jarvis AI Assistant",
    "created": "2025-01-22",
    "last_updated": "2025-01-22",
    "api_provider": "Brave Search API",
    "documentation": "https://brave.com/search/api/",
    "privacy_policy": "https://brave.com/privacy/",
    "free_tier_limit": "2000 requests/month"
  }
}