# ===== BACKEND CONFIGURATION =====
# API Security
JARVIS_API_KEY=dev-local-key
ALLOWED_ORIGINS=["http://localhost:3000"]

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=jarvis
DB_PASSWORD=jarvis123
DB_NAME=jarvis_db

# Services URLs
OLLAMA_URL=http://localhost:11434
STT_SERVICE_URL=http://localhost:8003
TTS_SERVICE_URL=http://localhost:8002
REDIS_URL=redis://localhost:6379

# Home Assistant Integration
HA_URL=http://your-ha-instance:8123
HA_TOKEN=your-home-assistant-token

# Weather API
WEATHER_API_KEY=your-weather-api-key
DEFAULT_CITY=Perpignan

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/jarvis.log

# ===== FRONTEND CONFIGURATION (dev uniquement) =====
# WebSocket Connection
VITE_WS_BASE=ws://localhost:8000
VITE_WS_SECURE=false

# API Configuration (laisser vide en prod pour sécurité)
VITE_API_KEY=

# User Settings
VITE_USER_ID=enzo
VITE_DEFAULT_VOICE=default

# ===== PRODUCTION OVERRIDES =====
# En production, utilisez HTTPS/WSS et clés API sécurisées
# VITE_WS_BASE=wss://your-domain.com
# VITE_WS_SECURE=true
# JARVIS_API_KEY=your-secure-production-key